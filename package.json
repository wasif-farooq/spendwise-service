{
    "name": "spendwise-backend",
    "version": "1.0.0",
    "description": "A scalable, versioned Node.js backend with independent services",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node -r tsconfig-paths/register dist/index.js",
        "start:api": "npm run start -- --process=api",
        "start:auth": "npm run start -- --process=auth",
        "start:user": "npm run start -- --process=user",
        "dev:app": "npm run dev:api",
        "dev:api": "nodemon --exec ts-node -r tsconfig-paths/register processes/api-gateway/index.ts",
        "dev:worker": "nodemon --exec ts-node -r tsconfig-paths/register processes/worker/index.ts",
        "test": "jest --config jest.config.json",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:v1": "jest --testPathPattern=v1",
        "test:v2": "jest --testPathPattern=v2",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "type-check": "tsc --noEmit",
        "migrate": "ts-node -r tsconfig-paths/register scripts/database/migrate.ts",
        "migrate:v1": "npm run migrate -- --version=v1",
        "migrate:v2": "npm run migrate -- --version=v2",
        "seed": "ts-node -r tsconfig-paths/register scripts/database/seed.ts",
        "docker:up": "docker compose up -d",
        "docker:down": "docker compose down",
        "docker:logs": "docker compose logs -f",
        "docker:build": "docker compose build",
        "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
        "docker:dev:ps": "docker compose -f docker-compose.yml -f docker-compose.dev.yml ps",
        "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
        "kafka:topics": "bash scripts/kafka/create-topics.sh",
        "docs:generate": "npm run docs:generate:v1 && npm run docs:generate:v2",
        "docs:generate:v1": "ts-node -r tsconfig-paths/register scripts/docs/generate-openapi.ts --version=v1",
        "docs:generate:v2": "ts-node -r tsconfig-paths/register scripts/docs/generate-openapi.ts --version=v2",
        "version:check": "ts-node -r tsconfig-paths/register scripts/version/check-compatibility.ts",
        "version:migrate": "ts-node -r tsconfig-paths/register scripts/version/migrate-data.ts"
    },
    "keywords": [
        "nodejs",
        "typescript",
        "backend",
        "microservices",
        "kafka",
        "postgres"
    ],
    "author": "Wasif",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "kafkajs": "^2.2.4",
        "knex": "^3.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "prom-client": "^15.0.0",
        "qrcode": "^1.5.4",
        "redis": "^4.6.10",
        "reflect-metadata": "^0.1.13",
        "speakeasy": "^2.0.0",
        "swagger-ui-express": "^5.0.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "yaml": "^2.3.4",
        "zod": "^3.22.4",
        "tsconfig-paths": "^4.2.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.4",
        "@types/pg": "^8.10.9",
        "@types/qrcode": "^1.5.6",
        "@types/speakeasy": "^2.0.10",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.0",
        "supertest": "^7.2.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.3"
    }
}